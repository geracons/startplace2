<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include ("../partials/head") %> 
  </head>
  <body>

    <header>
      <%-include ("../partials/header") %> 
    </header>
    
    <main>
      <div class="container-xxl login-register">
        <div class="row">
          <div class="col login-logo">
            <img src="/images/logo-nobg.png">
          </div>
        </div>
          <div class="row">
              <div class="col"></div>
              <div class="col">
                <section class="form-login">
                  <h5> Inicia sesión:</h5>
                      <input class="input-login" type="email" name="user" placeholder="Ingresa tu email">
                      <input class="input-login" type="password" name="password" placeholder="Contraseña">
                      <input class="btn-login" type="submit" value="Ingresar">
                      <p><a href="#">¿Olvidaste tu contraseña?</a></p>
                </section>
              </div>
              <div class="col"></div>
          </div>
          <div class="row">
              <div class="col"></div>
              <div class="col">
                  <section class="form-register">
                      <h5>... o regístrate: </h5>
                          <input class="input-login" type="email" name="" placeholder="Ingresa tu email">
                          <input class="input-login" type="text" placeholder="Ingresa tu nombre y apellido">
                          <input class="input-login" type="text" placeholder="Ingresa tu número de celular">
                          <input class="input-login" type="password" placeholder="Contraseña">
                          <input class="btn-login" type="submit" value="Registrarme">
                  </section>
              </div>
              <div class="col"></div>
          </div>
  
      </div>
    </main>
    
    <footer class="footer row">
      <%-include ("../partials/footer") %> 
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>
